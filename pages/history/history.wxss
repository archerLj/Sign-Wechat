.container {
  width: 100%;
  height: 100vh;
  padding: 20rpx 30rpx;
  box-sizing: border-box;
}

.scroll-view {
  width: 100%;
  height: 100%;
}

.event-item {
  width: 100%;
  height: 100rpx;
  border-bottom: 2rpx solid #efeff4;
  display: flex;
  justify-content: space-around;
  align-items: center;
  font-size: 14px;
  text-align: center;
}

.actionType {
  flex: 1;
}

.comment {
  flex: 1;
}

.time {
  flex: 2;
}

.redComment {
  flex: 1;
  color: red;
}